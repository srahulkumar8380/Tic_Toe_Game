<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


            <LinearLayout
                android:id="@+id/layout_first"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="3"
                android:layout_weight="8"
                android:background="#5a3f11"
                android:layout_marginBottom="100dp"
                android:layout_marginTop="100dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:weightSum="3"
                    >
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="20dp"
                        android:elevation="20dp"
                        >
                        <ImageView
                            android:id="@+id/first"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:onClick="DropIn"
                            android:tag="0"
                            />

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="20dp"
                        android:elevation="20dp"
                        >
                        <ImageView
                            android:id="@+id/second"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:onClick="DropIn"
                            android:tag="1"
                            />

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="20dp"
                        android:elevation="20dp"
                        >
                        <ImageView
                            android:id="@+id/third"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:onClick="DropIn"
                            android:tag="2"
                            />

                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:weightSum="3"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="20dp"
                        android:elevation="20dp"
                        >
                        <ImageView
                            android:id="@+id/fourth"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:onClick="DropIn"
                            android:tag="3"
                            />

                    </androidx.cardview.widget.CardView>
                    <LinearLayout
                        android:id="@+id/play_again_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="#9c5518"
                        android:layout_marginRight="20dp"
                        android:visibility="gone"
                        >

                        <TextView
                            android:id="@+id/winner_msg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Message For Winner"
                            android:textSize="25dp"
                            android:textColorHint="#ffffff"
                            android:textColor="#ffffff"
                            android:textStyle="bold"
                            android:fontFamily="serif-monospace"
                            android:gravity="center_vertical|center_horizontal"
                            android:background="#cf7500"
                            android:layout_margin="5dp"

                            >

                        </TextView>

                        <Button

                            android:layout_gravity="center"
                            android:id="@+id/play_again"
                            android:layout_weight="1"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:text="Play Again"
                            android:textAllCaps="false"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="5dp"
                            android:textSize="20dp"
                            android:background="#cf7500"
                            android:textStyle="bold"
                            android:textColor="#ffffff"
                            android:fontFamily="serif-monospace"
                            android:onClick="playAgain"
                            />


                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="20dp"
                        android:elevation="20dp"
                        >
                        <ImageView
                            android:id="@+id/fiveth"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:onClick="DropIn"
                            android:tag="4"
                            />

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="20dp"
                        android:elevation="20dp"
                        >
                        <ImageView
                            android:id="@+id/sixth"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:onClick="DropIn"
                            android:tag="5"
                            />

                    </androidx.cardview.widget.CardView>



                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layout_third"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    >
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="20dp"
                        android:elevation="20dp"
                        >
                        <ImageView
                            android:id="@+id/seventh"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:onClick="DropIn"
                            android:tag="6"
                            />

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="20dp"
                        android:elevation="20dp"
                        >
                        <ImageView
                            android:id="@+id/eightth"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:onClick="DropIn"
                            android:tag="7"
                            />

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="20dp"
                        android:elevation="20dp"
                        >
                        <ImageView
                            android:id="@+id/nineth"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:onClick="DropIn"
                            android:tag="8"
                            />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>

</RelativeLayout>

